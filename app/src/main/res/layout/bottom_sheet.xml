<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_10dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_choose_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Profile pic from"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/colorBlackLightLight"
        android:textSize="@dimen/dimen_14dp" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_choose_cam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_choose_pic"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:paddingLeft="@dimen/dimen_6dp"
        android:background="@drawable/ripple_effect_normal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cam"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/tv_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_toRightOf="@id/iv_cam"
            android:text="Camera"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/dimen_14dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:paddingLeft="@dimen/dimen_6dp"
        android:layout_below="@id/rl_choose_cam"
        android:background="@drawable/ripple_effect_normal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gallery"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_toRightOf="@id/iv_gallery"
            android:text="Gallery"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/dimen_14dp" />
    </RelativeLayout>


</RelativeLayout>
