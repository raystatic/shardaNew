<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_map_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_map_category_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:tint="@color/colorRed"
            android:cropToPadding="true" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_click_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:tint="@color/com_facebook_blue"
            android:cropToPadding="true" />

        <TextView
            android:id="@+id/tv_map_category_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_map_category_image"
            android:layout_toLeftOf="@id/iv_click_image"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:maxLines="2"
            android:text="Foodzone"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/dimen_17dp" />


    </RelativeLayout>
</RelativeLayout>