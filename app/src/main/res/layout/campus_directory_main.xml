<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_campus_directory_main"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_42dp"
        android:maxLines="1"
        android:text="Sharda Uni"
        android:textAlignment="center"
        android:textColor="@color/colorGrayDark"
        android:textSize="@dimen/dimen_14dp" />

    <RelativeLayout
        android:id="@+id/rl_campus_directory_info"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_post_name"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_campus_directory_icon"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:src="@drawable/directory_icon"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:cropToPadding="true" />


        <TextView
            android:id="@+id/tv_campus_directory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_campus_directory_icon"
            android:text="Sharda Uni"
            android:textStyle="bold"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/dimen_17dp" />

        <TextView
            android:id="@+id/tv_campus_directory_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_campus_directory_icon"
            android:layout_below="@id/tv_campus_directory_name"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:visibility="gone"
            android:textIsSelectable="true"
            android:text="Mob: 0123456789"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/tv_campus_directory_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_campus_directory_icon"
            android:layout_below="@id/tv_campus_directory_mobile"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:text="Ext: 0123"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/tv_campus_directory_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_campus_directory_icon"
            android:layout_below="@id/tv_campus_directory_ext"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:visibility="gone"
            android:textIsSelectable="true"
            android:text="Email: abc@example.com"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_15dp" />


<!--        <TextView
            android:id="@+id/tv_sub_category_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_sub_category_image"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="Sharda Uni"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/dimen_15dp" />-->
    </RelativeLayout>
</RelativeLayout>