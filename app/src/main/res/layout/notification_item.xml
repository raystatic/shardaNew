<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_notification_item"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:background="@drawable/ripple_effect_normal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_notification_title"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:cropToPadding="true"
        android:src="@drawable/default_bg_icon" />


    <TextView
        android:id="@+id/tv_notification_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_notification_title"
        android:text="Sharda Uni"
        android:textColor="@color/colorGreen"
        android:textSize="@dimen/dimen_13dp"/>

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notification_details"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_toRightOf="@id/iv_notification_title"
        android:text="Mob: 0123456789"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/dimen_15dp"/>

    <TextView
        android:id="@+id/tv_notification_add_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notification_title"
        android:layout_toRightOf="@id/iv_notification_title"
        android:text="Time"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/dimen_13dp" />
</RelativeLayout>